<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="26dp"
    android:orientation="vertical"
    tools:context=".ui.payment.PaymentFragment"
    android:background="#DCD5EA">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="button_back"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Payments ways:"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#4044F8"
        android:textSize="26sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_visa"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="#172196F3"
        app:cardCornerRadius="26dp" >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/visa_mc" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_paypal"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="#172196F3"
        app:cardCornerRadius="26dp" >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/paypal" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mbank"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="#172196F3"
        app:cardCornerRadius="26dp" >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/mbank" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_odengi"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="#172196F3"
        app:cardCornerRadius="26dp" >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/odengi" />
    </androidx.cardview.widget.CardView>

</LinearLayout>